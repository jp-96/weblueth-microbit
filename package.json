{
  "name": "@weblueth/microbit",
  "version": "0.0.0",
  "description": "My first react typescript package",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jp-96/weblueth-microbit.git"
  },
  "targets": {
    "pages": {
      "source": "pages/index.html",
      "isLibrary": false
    }
  },
  "scripts": {
    "weblueth": "yarn add https://github.com/jp-96/weblueth.git",
    "build": "yarn add --dev weblueth && yarn build:esm && yarn build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "prepare": "npm run build",
    "start:pages": "npx parcel --no-cache --target pages",
    "build:pages": "npx parcel build --no-cache --no-source-maps --target pages"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "react",
    "typescript",
    "web bluetooth",
    "micro:bit"
  ],
  "author": "weblueth",
  "license": "MIT",
  "devDependencies": {
    "@parcel/packager-ts": "2.8.3",
    "@parcel/transformer-typescript-types": "2.8.3",
    "parcel": "^2.8.3",
    "process": "^0.11.10",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@types/react": "^18.0.28",
    "microbit-web-bluetooth": "^0.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
